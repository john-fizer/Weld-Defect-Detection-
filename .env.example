# Environment Configuration
ENVIRONMENT=paper  # paper | live

# API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Market Data Providers
POLYGON_API_KEY=your_polygon_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
TRADIER_API_KEY=your_tradier_key_here
TRADIER_ACCOUNT_ID=your_tradier_account_here

# Alternative/Premium Data (Optional)
QUIVERQUANT_API_KEY=your_quiver_key_here
UNUSUALWHALES_API_KEY=your_uw_key_here
CHEDDARFLOW_API_KEY=your_cheddar_key_here

# Broker Integration (Live Trading - USE WITH CAUTION)
IBKR_ACCOUNT=your_ibkr_account_here
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for paper, 7496 for live
IBKR_CLIENT_ID=1

# Database
DATABASE_URL=sqlite:///trades.db
# DATABASE_URL=postgresql://user:password@localhost:5432/trading

# Vector Store
VECTORSTORE_TYPE=chroma
VECTORSTORE_PATH=./data/vectorstore

# Risk Settings (can override config/risk_policies.yaml)
MAX_VAR_95=0.03
MAX_DRAWDOWN_ALERT=0.08
MAX_MARGIN_USAGE=0.30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/trading.log
