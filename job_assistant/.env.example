# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-for-resume-storage

# Database
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./data/job_assistant.db

# Production (PostgreSQL - uncomment when ready)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/job_assistant

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI/ML APIs
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here  # Optional, for embeddings

# LLM Configuration
LLM_PROVIDER=anthropic  # anthropic or openai
LLM_MODEL=claude-sonnet-3-5-20240620
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Embeddings Configuration
EMBEDDING_PROVIDER=sentence-transformers  # sentence-transformers or openai
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Job Source APIs
LINKEDIN_API_KEY=your-linkedin-api-key
LINKEDIN_API_SECRET=your-linkedin-api-secret
INDEED_PUBLISHER_ID=your-indeed-publisher-id
GREENHOUSE_API_KEY=your-greenhouse-api-key

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (compatible; JobAssistantBot/1.0)
SCRAPER_RATE_LIMIT_DELAY=2  # seconds between requests
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30  # seconds

# Browser Automation (Playwright)
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000  # milliseconds
PLAYWRIGHT_SLOW_MO=100  # milliseconds delay between actions (human-like)

# Application Limits & Ethics
MAX_APPLICATIONS_PER_HOUR=10
MAX_APPLICATIONS_PER_DAY=50
MIN_FIT_SCORE_THRESHOLD=60  # Only show jobs above this score
REQUIRE_USER_APPROVAL=true  # NEVER set to false
AUTO_APPLY_ENABLED=false  # Must be explicitly enabled after approval gate setup

# Resume Customization
CUSTOMIZATION_MODE=balanced  # conservative, balanced, or aggressive
ENABLE_ETHICS_VALIDATION=true  # Always true
ENABLE_COVER_LETTER_GENERATION=true
MAX_RESUME_VERSIONS=10  # Keep top N performing versions

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@jobassistant.app

# Monitoring & Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/job_assistant.log
SENTRY_DSN=  # Optional error tracking
PROMETHEUS_PORT=9090

# Vector Store (FAISS)
VECTOR_STORE_PATH=./data/embeddings
VECTOR_INDEX_TYPE=IndexFlatL2  # or IndexIVFFlat for large datasets

# Data Retention
RESUME_RETENTION_DAYS=365
APPLICATION_RETENTION_DAYS=730
LOG_RETENTION_DAYS=90

# Feature Flags
ENABLE_JOB_SCRAPING=true
ENABLE_FIT_SCORING=true
ENABLE_AUTO_FILL=false  # Enable only after user training
ENABLE_INTERVIEW_PREP=false  # Future feature
ENABLE_ANALYTICS_DASHBOARD=true

# CORS (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (API)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Development/Testing
TESTING=false
MOCK_LLM_RESPONSES=false
MOCK_JOB_SOURCES=false
